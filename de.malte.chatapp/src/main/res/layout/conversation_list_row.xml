<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cl_contactPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/cl_contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moritz Poll"
        android:layout_toRightOf="@id/cl_contactPic"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/cl_lastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gute Fahrt"
        android:layout_toRightOf="@id/cl_contactPic"
        android:layout_below="@id/cl_contactName"/>


</RelativeLayout>